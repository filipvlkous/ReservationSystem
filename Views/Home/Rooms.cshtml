@{
    ViewData["Title"] = "Rooms";
}
@model IEnumerable<RoomModel>
    <style>
   
        .mysquare {
           
            border: 1px solid #000;
            display: flex;
            flex-direction:column;
            width:250px;
            height:250px;
            float: left;
            border:solid 3px;
            margin:10px;
            padding:10px;
        }
    </style>
<h1>@ViewData["Title"]</h1>

@foreach (var r in Model)
{
        <div class="mysquare">
            <h3> @r.Name</h3>
            @{

                if (r.Text.Length > 200)
                {
                    <p title="@r.Text">@(r.Text.Substring(0, 197))...</p>
                }
                else
                {
                    <p>@r.Text</p>
                }
             }
            @Html.ActionLink("Book now", "Room", "Home", new { id = r.Id })

        </div>
}
